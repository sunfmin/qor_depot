<!-- START:explanation -->
<%= form_for @order do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
<!-- START_HIGHLIGHT -->
      <%= t('errors.template.header', :count=>@order.errors.size,
        :model=>t('activerecord.models.order')) %>:
<!-- END_HIGHLIGHT -->
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
<!-- START:raw -->
        <li><%=raw msg %></li>
<!-- END:raw -->
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- ... -->
<!-- END:explanation -->

  <div>
<!-- START_HIGHLIGHT -->
    <%= f.label :name, t('.name') + ":" %>
<!-- END_HIGHLIGHT -->
    <%= f.text_field :name, :size => 40 %>
  </div>

  <div>
<!-- START_HIGHLIGHT -->
    <%= f.label :address, t('.address') + ":" %>
<!-- END_HIGHLIGHT -->
    <%= f.text_area :address, :rows => 3, :cols => 40 %>
  </div>

  <div>
<!-- START_HIGHLIGHT -->
    <%= f.label :email, t('.email') + ":" %>
<!-- END_HIGHLIGHT -->
    <%= f.email_field :email, :size => 40 %>
  </div>

  <div>
<!-- START_HIGHLIGHT -->
    <%= f.label :pay_type, t('.pay_type') + ":" %>
<!-- END_HIGHLIGHT -->
    <%=
      f.select :pay_type,
                   Order::PAYMENT_TYPES, 
# START_HIGHLIGHT
                  :prompt => t('.pay_prompt')
# END_HIGHLIGHT
    %>
  </div>
 
<!-- START_HIGHLIGHT -->
  <%= f.submit t('.submit') %>
<!-- END_HIGHLIGHT -->
<% end %>  
